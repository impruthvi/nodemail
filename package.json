{
  "name": "@impruthvi/nodemail",
  "version": "0.3.0",
  "description": "A unified mail service for Node.js/TypeScript with Laravel-like simplicity. Support for multiple providers (SMTP, SendGrid, AWS SES, Mailgun, Resend, Postmark) - just change environment variables, no code changes needed.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "example": "tsx --tsconfig tsconfig.json examples/basic-smtp.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "docs": "typedoc src/index.ts"
  },
  "keywords": [
    "email",
    "mail",
    "mailer",
    "smtp",
    "sendgrid",
    "ses",
    "mailgun",
    "resend",
    "postmark",
    "typescript",
    "laravel",
    "mailable",
    "notification",
    "queue",
    "template",
    "markdown"
  ],
  "author": "Pruthvisinh Rajput (https://github.com/impruthvi)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/impruthvi/nodemail.git"
  },
  "bugs": {
    "url": "https://github.com/impruthvi/nodemail/issues"
  },
  "homepage": "https://github.com/impruthvi/nodemail#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "examples",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "dotenv": "^16.4.5",
    "nodemailer": "^7.0.10",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "@aws-sdk/client-ses": "^3.699.0",
    "@sendgrid/mail": "^8.1.4",
    "form-data": "^4.0.1",
    "mailgun.js": "^10.2.3",
    "postmark": "^4.0.5",
    "resend": "^4.0.1"
  },
  "peerDependenciesMeta": {
    "@sendgrid/mail": {
      "optional": true
    },
    "@aws-sdk/client-ses": {
      "optional": true
    },
    "form-data": {
      "optional": true
    },
    "mailgun.js": {
      "optional": true
    },
    "resend": {
      "optional": true
    },
    "postmark": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.3",
    "@types/nodemailer": "^6.4.16",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typedoc": "^0.26.11",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0"
  },
  "optionalDependencies": {
    "bull": "^4.16.3",
    "bullmq": "^5.28.2",
    "commander": "^12.1.0",
    "ejs": "^3.1.10",
    "handlebars": "^4.7.8",
    "i18next": "^23.16.4",
    "juice": "^11.0.1",
    "marked": "^14.1.3",
    "pug": "^3.0.3"
  }
}
